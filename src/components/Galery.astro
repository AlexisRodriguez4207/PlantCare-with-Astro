---
import { db, Plantas } from "astro:db";

const plants = await db.select().from(Plantas).all();
---

<h2 class="text-center text-2xl">Plantas</h2>

<div class="lg:grid lg:grid-cols-3 lg:gap-x-6 lg:space-y-0 mb-15">
  {
    plants.map(({ id, name, description }) => (
      <div class="group relative bg-white mt-4 p-4 rounded-lg shadow-lg">
        <img src={`${id}.webp`} alt={name} class="w-full h-80 rounded-lg " />
        <p class="text-2xl font-medium text-center m-2">{name}</p>
        <p>{description}</p>
        <div class="text-center mt-4">
          <button
            type="button"
            class="bg-blue-100 hover:bg-blue-300 rounded-2xl px-4 py-2"
          >
            Mas Informaci√≥n
          </button>
        </div>
      </div>
    ))
  }
</div>
